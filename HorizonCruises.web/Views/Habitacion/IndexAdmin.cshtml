@model IEnumerable<HorizonCruises.Application.DTOs.HabitacionDTO>

@{
    ViewData["Title"] = "Administrar Habitaciones";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary"><i class="fas fa-bed"></i> Administrar Habitaciones</h2>
        <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i> Nueva Habitación</a>
    </div>

    <div class="card shadow-lg">
        <div class="card-body">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Id)</th>
                        <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                        <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                        <th>@Html.DisplayNameFor(model => model.CantidadMinimaHuespedes)</th>
                        <th>@Html.DisplayNameFor(model => model.CantidadMaximaHuespedes)</th>
                        <th>@Html.DisplayNameFor(model => model.Tamano)</th>
                        <th>@Html.DisplayNameFor(model => model.Tipo)</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Id)</td>
                            <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                            <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                            <td>@Html.DisplayFor(modelItem => item.CantidadMinimaHuespedes)</td>
                            <td>@Html.DisplayFor(modelItem => item.CantidadMaximaHuespedes)</td>
                            <td>@Html.DisplayFor(modelItem => item.Tamano)</td>
                            <td>@Html.DisplayFor(modelItem => item.Tipo)</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i> Editar</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm"><i class="fas fa-eye"></i> Ver</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}

