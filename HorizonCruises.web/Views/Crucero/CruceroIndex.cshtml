@model IEnumerable<HorizonCruises.Application.DTOs.CruceroDTO>

@{
    ViewData["Title"] = "CruceroIndex";
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
}

<h1 class="text-center mb-4">Lista de Cruceros</h1>

<section>
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-lg rounded-4 border-0 d-flex flex-column align-items-center p-3" style="background: #f8f9fa; box-shadow: 4px 4px 15px rgba(0, 0, 0, 0.1);">
                        <img src="@Url.Action("ObtenerImagen", "Crucero", new { id = item.Id })"
                             class="card-img-top" alt="@item.Nombre" style="height: 200px; object-fit: cover;">
                        <div class="card-body d-flex flex-column justify-content-between ms-4">
                            <h5 class="card-title text-primary fw-bold">@item.Nombre</h5>
                            <p class="card-text text-muted">
                                <i class="bi bi-ship"></i> <strong>Barco:</strong> @item.IdBarcoNavigation.Nombre
                            </p>
                            <p class="card-text text-secondary">
                                <i class="bi bi-calendar"></i> <strong>Días:</strong> @item.CantidadDias
                            </p>
                            <div class="text-end mt-3">
                                <a class="btn btn-outline-primary px-4" asp-action="CruceroDetails" asp-route-id="@item.Id">
                                    <i class="bi bi-eye"></i> Ver Detalles
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

