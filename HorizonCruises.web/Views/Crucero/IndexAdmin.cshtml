@model IEnumerable<HorizonCruises.Application.DTOs.CruceroDTO>

@{
    ViewData["Title"] = "Mantenimiento Crucero";
}

<div class="container mt-4">
    <h1 class="mb-4 text-primary">Administración de Cruceros</h1>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Crear Nuevo
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover border shadow">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Imagen</th>
                    <th>Días</th>
                    <th>Barco</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Nombre</td>
                        <td>
                            <img src="@Url.Action("ObtenerImagen", "Crucero", new { id = item.Id })"
                                 class="rounded" style="height: 80px; width: 120px; object-fit: cover;">
                        </td>
                        <td>@item.CantidadDias</td>
                        <td>@item.IdBarcoNavigation.Nombre</td>
                        <td>
                            <a class="btn btn-outline-primary px-4" asp-action="DetailsAdmin" asp-route-id="@item.Id">
                                <i class="bi bi-eye"></i> Ver Detalles
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
