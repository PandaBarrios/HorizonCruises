@model HorizonCruises.Application.DTOs.ComplementoDTO

@{
    ViewData["Title"] = "Crear Complemento";
}

<h1 class="text-center">Crear Complemento</h1>
<hr />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5>Formulario para Crear Complemento</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <!-- Resumen de validación -->
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Campo Nombre -->
                        <div class="form-group">
                            <label asp-for="Nombre" class="control-label">Nombre del Complemento</label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ingresa el nombre del complemento" required />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <!-- Campo Descripción -->
                        <div class="form-group">
                            <label asp-for="Descripcion" class="control-label">Descripción</label>
                            <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Ingresa una breve descripción" required></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <!-- Campo Precio -->
                        <div class="form-group">
                            <label asp-for="Precio" class="control-label">Precio</label>
                            <input asp-for="Precio" class="form-control" placeholder="Ingresa el precio del complemento" type="number" step="0.01" required />
                            <span asp-validation-for="Precio" class="text-danger"></span>
                        </div>

                        <!-- Campo Aplicado A -->
                        <div class="form-group">
                            <label asp-for="AplicadoA" class="form-label">Aplicado A</label>
                            <select class="form-control" asp-for="AplicadoA">
                                <option value="true">Huésped</option>
                                <option value="false">Camarote</option>
                            </select>
                        </div>

                        <!-- Botón Submit -->
                        <div class="form-group text-center mt-4">
                            <input type="submit" value="Crear Complemento" class="btn btn-success btn-lg" />
                        </div>
                        <div>
                            <a asp-action="IndexAdmin" class="btn btn-success">
                                <i class="bi bi-arrow-left-circle"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

