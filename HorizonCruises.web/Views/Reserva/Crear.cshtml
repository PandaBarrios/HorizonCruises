    <script>
        let complementosSeleccionados = [];
        let complementoTemporal = {}; // Para guardar mientras se confirma

        function agregarComplemento(id, nombre, precio, aplicaA) {

            const totalHuespedes = parseInt(document.getElementById('TotalHuespedes')?.value || '0');
            const totalHabitaciones = parseInt(document.getElementById('TotalHabitaciones')?.value || '0');

            aplicaA = (aplicaA === true || aplicaA === "true");

            // Validar antes de mostrar el modal
            if (aplicaA === true && totalHuespedes === 0) {
                mostrarAlertaComplemento('No puedes agregar complementos para huéspedes sin haber agregado huéspedes.');
                return;
            }
            if (aplicaA === false && totalHabitaciones === 0) {
                mostrarAlertaComplemento('No puedes agregar complementos para habitaciones sin haber agregado habitaciones.');
                return;
            }

            complementoTemporal = { id, nombre, precio, aplicaA };

            document.getElementById('complemento-id').value = id;
            document.getElementById('complemento-nombre').value = nombre;
            document.getElementById('complemento-precio').value = precio;
            document.getElementById('cantidadComplemento').value = aplicaA ? totalHuespedes : totalHabitaciones;

            const modal = new bootstrap.Modal(document.getElementById('modalCantidadComplemento'));
            modal.show();
        }

        function confirmarAgregarComplemento() {
