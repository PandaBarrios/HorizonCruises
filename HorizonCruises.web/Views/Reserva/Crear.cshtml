            const nombre = document.getElementById('complemento-nombre').value;
            const precio = Number(document.getElementById('complemento-precio').value);
            const cantidad = Number(document.getElementById('cantidadComplemento').value);
            const aplicaA = complementoTemporal.aplicaA;

            const totalHuespedes = parseInt(document.getElementById('TotalHuespedes')?.value || '0');
            const totalHabitaciones = parseInt(document.getElementById('TotalHabitaciones')?.value || '0');

            const maxPermitido = Math.max(totalHuespedes, totalHabitaciones);


            console.log(cantidad);

            if (isNaN(cantidad) || cantidad <= 0 || cantidad > maxPermitido) {
                document.getElementById('error-cantidadComplemento').classList.remove('d-none');
                return;
            }

            // Validar si ya existe
            const existe = complementosSeleccionados.some(c => c.id === id);
            if (existe) {
                document.getElementById('alerta-complemento').classList.remove('d-none');
                return;
            }

            complementosSeleccionados.push({
                    id,
                    nombre,
                    precio,
                    aplicaA, 
                    cantidad
            });


            actualizarVistaComplementos();

            // Cerrar modal
            const modal = bootstrap.Modal.getInstance(document.getElementById('modalCantidadComplemento'));
            modal.hide();

            actualizarResumenFinal();
        }

        function actualizarVistaComplementos() {
