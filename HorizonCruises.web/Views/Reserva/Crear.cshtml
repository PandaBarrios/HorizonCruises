            tabla.innerHTML = '';

            complementosSeleccionados.forEach(c => {
                console.log(c.aplicaA)
                console.log(c.aplicado)
                const fila = document.createElement('tr');
                fila.innerHTML = `
                    <td>${c.nombre}</td>
                    <td>${'₡' + c.precio}</td>
                    <td>${c.aplicaA ? 'Huéspedes' : 'Habitaciones'}</td>
                    <td>${c.cantidad}</td>
                    <td class="text-center">
                        <button type="button" class="btn btn-sm btn-danger" onclick="eliminarComplemento(${c.id})">Eliminar</button>
                    </td>
                `;
                tabla.appendChild(fila);
            });
            actualizarResumenFinal();
        }

        function eliminarComplemento(id) {
            complementosSeleccionados = complementosSeleccionados.filter(c => c.id !== id);
            actualizarVistaComplementos();
            actualizarResumenFinal();
        }

        function eliminarComplementosPorTipo(aplicaA) {
            complementosSeleccionados = complementosSeleccionados.filter(c => c.aplicaA !== aplicaA);
            actualizarVistaComplementos();
            actualizarResumenFinal();
        }

        function cerrarAlertaComplemento() {
            document.getElementById('alerta-complemento').classList.add('d-none');
        }

        function mostrarAlertaComplemento(mensaje) {
            const alerta = document.getElementById('alerta-complemento');
            alerta.querySelector('strong').textContent = '¡Atención!';
            alerta.querySelector('span').textContent = mensaje;
            alerta.classList.remove('d-none');
        }

        // Funciones que debes llamar al eliminar huéspedes o habitaciones
        function cuandoSeEliminanTodosLosHuespedes() {
            eliminarComplementosPorTipo(true); // Eliminar complementos para huéspedes
             
        }

        function cuandoSeEliminanTodasLasHabitaciones() {
            eliminarComplementosPorTipo(false); // Eliminar complementos para habitaciones
            
        }
    </script>

