@model HorizonCruises.Application.DTOs.BarcoDTO

@{
    ViewData["Title"] = "Detalles del Barco";
}

<div class="container mt-4 pb-5">
    <div class="card shadow-lg rounded">
        <div class="card-header bg-primary text-white text-center">
            <h3 class="mb-0">Detalles del Barco</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4 text-secondary fw-bold">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>

                <dt class="col-sm-4 text-secondary fw-bold">
                    @Html.DisplayNameFor(model => model.Descripcion)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>

                <dt class="col-sm-4 text-secondary fw-bold">
                    @Html.DisplayNameFor(model => model.CapacidadHuespedes)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.CapacidadHuespedes)
                </dd>

                <dt class="col-sm-4 text-secondary fw-bold">Habitaciones Disponibles</dt>
                <dd class="col-sm-8">
                    <ul class="list-group">
                        @foreach (var habitacion in Model.BarcoHabitaciones)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @habitacion.IdHabitacionNavigation.Nombre
                                <span class="badge bg-primary rounded-pill">
                                    @habitacion.TotalHabitacionesDisponibles disponibles
                                </span>
                            </li>
                        }
                    </ul>
                </dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            <div class="btn-group">
                @* <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">
                    <i class="bi bi-pencil-fill"></i> Editar
                </a> *@
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-return-left"></i> Regresar
                </a>
            </div>
        </div>
    </div>
</div>
