@model IEnumerable<HorizonCruises.Application.DTOs.BarcoDTO>

@{
    ViewData["Title"] = "Catálogo de Barcos";
}

<h1 class="text-center mb-4"> Catálogo de Barcos</h1>

<section>
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-12 mb-4">
                    @* Agrega margen inferior para separación *@
                    <div class="card shadow-lg rounded-4 border-0 d-flex flex-row align-items-center p-3"
                         style="background: #f8f9fa; box-shadow: 4px 4px 15px rgba(0, 0, 0, 0.1);">
                        @* Imagen del barco (si existe) *@
                        @* <div class="flex-shrink-0">
                            <img class="rounded" style="width: 350px; height: 200px; object-fit: cover;"
                                 src="data:image/jpeg;charset=utf-8;base64,@Convert.ToBase64String(item.Imagen)"
                                 alt="Imagen del barco" />
                        </div> *@
                        <div class="card-body d-flex flex-column justify-content-between ms-4">
                            <h5 class="card-title text-primary fw-bold">@Html.DisplayFor(modelItem => item.Nombre)</h5>
                            <p class="card-text text-muted">
                                <i class="bi bi-people-fill"></i> <strong>Capacidad:</strong> @Html.DisplayFor(modelItem => item.CapacidadHuespedes) pasajeros
                            </p>
                            <p class="card-text text-secondary">
                                <i class="bi bi-card-text"></i> <strong>Descripción:</strong> @Html.DisplayFor(modelItem => item.Descripcion)
                            </p>
                            <div class="text-end mt-3">
                                <a class="btn btn-outline-primary px-4" asp-action="Details" asp-route-id="@item.Id">
                                    <i class="bi bi-eye"></i> Ver Detalles
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

