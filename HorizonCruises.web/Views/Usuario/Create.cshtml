@model HorizonCruises.Application.DTOs.ClienteDTO

@{
    Layout = null;
    ViewData["Title"] = "Crear Cliente";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Horizon Cruises</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body class="bg-light">

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow rounded-4">
                    <div class="card-header bg-primary text-white text-center rounded-top-4">
                        <h3 class="mb-0">Crear nuevo cliente</h3>
                    </div>
                    <div class="card-body">
                        <form asp-action="Create" method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                            <div class="mb-3">
                                <label asp-for="Nombre" class="form-label fw-semibold">Nombre completo</label>
                                <input asp-for="Nombre" class="form-control" required />
                                <span asp-validation-for="Nombre" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="CorreoElectronico" class="form-label fw-semibold">Correo electrónico</label>
                                <input asp-for="CorreoElectronico" class="form-control" required />
                                <span asp-validation-for="CorreoElectronico" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="FechaNacimiento" class="form-label fw-semibold">Fecha de nacimiento</label>
                                <input asp-for="FechaNacimiento" type="date" class="form-control" required />
                                <span asp-validation-for="FechaNacimiento" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Pais" class="form-label fw-semibold">País</label>
                                <select asp-for="Pais" class="form-select" asp-items="@(new SelectList(ViewBag.Paises))" required>
                                    <option value="">Seleccione un país</option>
                                </select>
                                <span asp-validation-for="Pais" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Contrasena" class="form-label fw-semibold">Contraseña</label>
                                <input asp-for="Contrasena" type="password" class="form-control" required />
                                <span asp-validation-for="Contrasena" class="text-danger small"></span>
                            </div>

                            <input type="hidden" asp-for="IdRol" value="2" />

                            <div class="d-grid gap-2">
                                <input type="submit" value="Crear Cliente" class="btn btn-success" />
                                <a asp-controller="Login" asp-action="Index" class="btn btn-outline-secondary">Regresar</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>

